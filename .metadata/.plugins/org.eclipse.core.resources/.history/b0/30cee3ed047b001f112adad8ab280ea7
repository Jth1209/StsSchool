package spring;

import java.time.format.DateTimeFormatter;

public class MemberPrinter {
	
	private DateTimeFormatter dataTimeFormatter;
	
	public void print(Member member) {
		if(dataTimeFormatter == null) {
			System.out.printf("회원정보 : 아이디 = %d, 이메일 = %s, 이름 = %s, 등록일 = %tF\n",
					member.getId(),member.getEmail(),member.getName(),member.getRegisterDateTime());
		}else {
			System.out.printf("회원정보 : 아이디 = %d, 이메일 = %s, 이름 = %s, 등록일 = %tF\n",
					member.getId(),member.getEmail(),member.getName(),dataTimeFormatter.format(member.getRegisterDateTime()));
		}
	}
}
